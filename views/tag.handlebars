<div id="homeBody" class="row justify-content-center">
  <div class="col-lg-8">
    <h3 class="mx-2" style="font-family:'Roboto Mono',monospace;border-bottom:2px solid #ce1717;padding-bottom:10px;margin-bottom:20px;">#{{name}}</h3>
		<div class="container commentsList" id="postsContainer">
		</div>
    {{> infinitescrollrequests}}
  </div>
</div>

<script>

$('#postsContainer').infiniteScroll({
  path: function() {
    var pageNumber = ( this.loadCount + 1 );
    return '/showtag/{{name}}/' + pageNumber;
  },
  append: '.commentContainer',
  prefill: true,
  history: true,
  status: '.page-load-status'
});

$('#postsContainer').on( 'append.infiniteScroll', function( event, response, path, items ) {
  autosize($('.comment-textarea'));
  tribute.attach($(".comment-textarea"));
});
</script>

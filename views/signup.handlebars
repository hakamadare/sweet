<div class="userForm">

    <h3 class="text-center mb-4">Sign up</h3>

    {{> message }}

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="email" placeholder="Email" {{#if sessionFlash.email}}value="{{ sessionFlash.email }}"{{/if}}>
            <small class="form-text">We will never spam you or share your data with anyone!</small>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="username" placeholder="Username" maxlength="20" {{#if sessionFlash.username}}value="{{ sessionFlash.username }}"{{/if}}>
            <small class="form-text">Lowercase letters, numbers, - (dash) and _ (underscore) only. 20 characters maximum.</small>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="passwordrepeat" placeholder="Repeat password">
        </div>

        <button class="btn btn-secondary btn-block" type="submit" >Sign up</button>
    </form>

    <a class="d-block mt-3" href="/forgot-password">Forgot password?</a>

</div>
